<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogActionBackgroundStyle">
        <item name="android:background">@color/tranparent_white_30percent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

    <style name="DialogActionMessageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">54dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/transparent_green_95percent</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DialogActionSeparatorLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@color/transparent_green_95percent</item>
    </style>

    <style name="DialogActionPositiveButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/transparent_green_95percent</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="DialogActionNegativeButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/transparent_green_95percent</item>
        <item name="android:textSize">19sp</item>
    </style>

</resources>